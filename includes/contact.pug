
mixin contactInfoItem(item, id)
   .contact-info-item.padd-15(id=id)
      .icon
         i(class=item.cls)
      h4= item.hd
      p= item.para

//- For form input fields
mixin contactFormInfo(inputFields)
   if(inputFields.col_12)
      .form-item.col-12.padd-15
         .form-group
            input(type=inputFields.type class="form-control" id=inputFields.id placeholder=inputFields.placeholder)
   else
      .form-item.col-6.padd-15
         .form-group
            input(type=inputFields.type id=inputFields.id class="form-control" placeholder=inputFields.placeholder)

section#contact.contact.section
   .container
      .row
         .section-title.padd-15
            h2 Contact Me
      h3.contact-title.padd-15 Do you have any questions?
      h4.contact-sub-title.padd-15 I'm at your service
      .row
         - let item = {cls: "fa fa-phone", hd: 'Call me', para: '+9230451154480'}
         + contactInfoItem(item, "phone")
         -item = {cls: 'fa fa-map-marker-alt', hd: 'Location', para: 'Karachi'}
         + contactInfoItem(item, "location")
         -item = {cls: 'fa fa-envelope', hd: 'Email', para: 'ihnaqi.dev@gmail.com'}
         + contactInfoItem(item, "email_")
         -item = {cls: 'fa fa-globe-europe', hd: 'Website', para: 'https://ihnaqi.github.io/'}
         + contactInfoItem(item, "website")
      h3.contact-title.padd-15 Write me an email
      h4.contact-sub-title.padd-15 I'm very responsive
      .row
         form(class='contact-form padd-15' onsubmit="contact(); reset(); return false;")
            .row
               - let inputFields = {type: 'text', id:'name', placeholder:'Name'}
               + contactFormInfo(inputFields)
               - inputFields = {type: 'email', id:'email', placeholder: 'someone@example.com'}
               + contactFormInfo(inputFields)
            .row
               - inputFields = {type: 'text', id:'subject', col_12: true, placeholder: 'Subject'}
               + contactFormInfo(inputFields)
            .row
               .form-item.col-12.padd-15
                  .form-group
                     textarea(class="form-control" name="" id="message" placeholder="Message")
               .contact-form.padd-15
                  .row
                     .form-item.col-12.padd-15
                        button(type="sumbit" class="btn") Send Message